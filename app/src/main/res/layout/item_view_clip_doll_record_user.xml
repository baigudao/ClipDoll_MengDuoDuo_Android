<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/second_background_color"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

    <View
        android:layout_width="15dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_clip_doll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/wawa_default0"/>

        <TextView
            android:id="@+id/tv_clip_doll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="美发屋好多公仔"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_clip_doll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2017/11/08 14:34:23"
            android:textColor="@color/main_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="80dp"/>

</LinearLayout>